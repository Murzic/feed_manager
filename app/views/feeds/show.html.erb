<div class="row">
  <%= link_to "< back", feeds_path %>
  <div class="align-box">
    <h2>Feed <%= @feed.id %> <%= @feed.name %></h2>
    <%= link_to "add new product", new_feed_product_path(@feed), class: "button" %>
  </div>

  <div class="align-box js-product-query">
    <div class="search">
      <%= form_tag("", method: "get", class: "search-form") do %>
        <%= text_field_tag(:q, params[:q], placeholder: "Search", class: "form__text-input") %>
        <%= hidden_field_tag :sort, params[:sort], class: "js-sort-field" %>
        <%= hidden_field_tag :order, params[:order], class: "js-order-field" %>
      <% end %>
    </div>
    <div class="sort-buttons">
      <div data-sort="price" data-order="asc" class="button sort-button <%= 'sort-button_active' if params[:sort] == 'price' && params[:order] == 'asc' %>">price: low to high </div>
      <div data-sort="price" data-order="desc" class="button sort-button <%= 'sort-button_active' if params[:sort] == 'price' && params[:order] == 'desc' %>">price: high to low</div>
      <div data-sort="title" data-order="" class="button sort-button <%= 'sort-button_active' if params[:sort] == 'title' %>">title: A to Z </div>
    </div>
  </div>

  <div class="list">
    <%= render partial: "products/product", collection: @products %>
  </div>

  <%= will_paginate @products %>
</div>
