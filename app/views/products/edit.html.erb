<%= link_to "Inapoi la produs", product_path(@product) %>

<%= form_for @product, url: product_path(@product) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :aff_code %>
    <%= f.text_field :aff_code %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.label :campaign_name %>
    <%= f.text_field :campaign_name %>
  </div>
  <div>
    <%= f.label :image_urls %>
    <%= f.text_field :image_urls %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <%= f.submit %>
<% end %>
